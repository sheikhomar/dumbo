Program
	Number input
	
	Write("Enter a number and it will be returned, if it is odd or even")
	input := ReadNumber()
	ComputeOddOrEven(input)
End Program

Function ComputeOddOrEven(number input) returns nothing
	if (input % 2 = 0) then
		Write("The number is even")
	else if (NOT(input % 2 = 0)) then
		Write("The number " + ConvertNumberToText(input) + " is odd")
	else
		Write("Error occured. Please close the program and try again")
	end if
End Function 
